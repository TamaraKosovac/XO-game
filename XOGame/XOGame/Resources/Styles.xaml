                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="LightPink"/>
    <SolidColorBrush x:Key="GridBackground" Color="LightGray"/>
    <SolidColorBrush x:Key="TextForeground" Color="DarkSlateGray"/>
    <sys:Double x:Key="ButtonFontSize">20</sys:Double>
    <sys:Double x:Key="TitleFontSize">26</sys:Double>
    <Thickness x:Key="TextMargin">10</Thickness>
