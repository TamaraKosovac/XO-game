    <sys:Double x:Key="PlayIconHeight">30</sys:Double>
    <sys:Double x:Key="PlayIconWidth">30</sys:Double>
    <sys:Double x:Key="ButtonWidth">120</sys:Double>
    <sys:Double x:Key="ButtonHeight">40</sys:Double>
    <sys:Double x:Key="MaxWidth">500</sys:Double>
    <sys:Double x:Key="MaxHeight">500</sys:Double>
    <sys:Double x:Key="MusicButtonWidth">60</sys:Double>
    <sys:Double x:Key="MusicButtonHeight">60</sys:Double>
    <sys:Double x:Key="PlayButtonWidth">300</sys:Double>
    <sys:Double x:Key="PlayButtonHeight">100</sys:Double>
